<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="src.BilanFormController" hgap="10" vgap="10" alignment="CENTER">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    <Label text="Générer un bilan" style="-fx-font-size: 18px; -fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <Label text="Periode:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <ComboBox fx:id="periodeCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Mois:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ComboBox fx:id="moisCombo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label text="Année:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ComboBox fx:id="anneeCombo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label text="Début:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <DatePicker fx:id="debutPicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Label text="Fin:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <DatePicker fx:id="finPicker" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Button text="Générer PDF" onAction="#handleGenererPDF" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    <Button text="Retour menu" onAction="#handleRetourMenu" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
</GridPane> 